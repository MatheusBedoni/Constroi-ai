<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fale_conosco"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.equipe.controiai2.FaleConosco">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/tb_main" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_below="@id/tb_main"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Seu nome: "
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimarytext"
            android:id="@+id/nome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16dp"
            android:textColor="@color/colorPrimarytext"
            android:id="@+id/txt_nome"
            android:layout_alignTop="@+id/nome"
            android:layout_toRightOf="@+id/nome"
            android:layout_toEndOf="@+id/nome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Seu email: "
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimarytext"
            android:id="@+id/email"
            android:layout_below="@+id/nome"
            android:layout_alignLeft="@+id/nome"
            android:layout_alignStart="@+id/nome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16dp"
            android:textColor="@color/colorPrimarytext"
            android:id="@+id/txt_email"
            android:layout_alignTop="@+id/email"
            android:layout_toRightOf="@+id/email"
            android:layout_toEndOf="@+id/email" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Escreva um titulo"
            android:textSize="16dp"
            android:textColor="@color/colorPrimarytext"
            android:id="@+id/txt_titulo"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/email"
            android:layout_alignLeft="@+id/email"
            android:layout_alignStart="@+id/email" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="visible">

            <Button
                android:text="CANCELAR"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="cancelar"
                android:id="@+id/cancelMensagem"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
            <Button
                android:text="ENVIAR "
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="enviarMensagem"
                android:id="@+id/button_descr4"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Escreva sua mensagem"
            android:textSize="16dp"
            android:textColor="@color/colorPrimarytext"
            android:id="@+id/txt_mensagem"
            android:layout_marginTop="69dp"
            android:layout_below="@+id/txt_titulo"
            android:layout_alignStart="@+id/txt_titulo" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_titulo"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16dp"
            android:layout_below="@+id/txt_titulo"
            android:layout_alignStart="@+id/txt_titulo" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_mensagem"
            android:layout_marginTop="16dp"

            android:layout_marginRight="10dp"
            android:textSize="16dp"
            android:layout_below="@+id/txt_mensagem"
            android:layout_alignStart="@+id/txt_mensagem" />

    </RelativeLayout>

</RelativeLayout>
