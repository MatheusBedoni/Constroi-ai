<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mudar_senha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.app.equipe.controiai2.MudarSenha">
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/tb_main" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Digite o email que vocÃª faz login"
        android:textSize="16dp"
        android:textColor="@color/colorPrimarytext"
        android:id="@+id/txt_problema"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tb_main"
        android:layout_alignStart="@+id/problema" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Iremos lhe enviar um email solicitando uma nova senha"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/problema"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/txt_problema"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_email"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="16dp"
        android:layout_below="@+id/problema"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Enviar"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:onClick="enviar"
        android:layout_marginRight="10dp"
        android:background="@color/colorAccent"
        android:id="@+id/button6"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

</RelativeLayout>
