<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/user"
        android:id="@+id/ivProfissaoFoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Telefone: "
        android:layout_toRightOf="@+id/ivProfissaoFoto"
        android:layout_toEndOf="@+id/ivProfissaoFoto"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:textColor="@color/colorPrimarytext"
        android:id="@+id/txt_telefone"
        android:layout_below="@+id/txt_nome"
        android:layout_alignLeft="@+id/txt_nome"
        android:layout_alignStart="@+id/txt_nome" />


    <View
        android:id = "@+id/vw_divider2"
        android:layout_width="match_parent"
        android:layout_height="0.20dp"
        android:elevation="4dp"
        android:background="#e0dddd"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/problema"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Problema:"

        android:textSize="16dp"
        android:textColor="@color/colorPrimarytext"
        android:id="@+id/txt_problema"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/ivProfissaoFoto"
      />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16dp"
        android:text="problema"
        android:textColor="@color/colorPrimarytext"
        android:id="@+id/problema"
        android:layout_marginRight="17dp"
       android:layout_marginTop="16dp"
        android:layout_below="@+id/ivProfissaoFoto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nome: "
        android:layout_marginLeft="5dp"
        android:textSize="16dp"
        android:textColor="@color/colorPrimarytext"
        android:id="@+id/txt_nome"

        android:layout_alignTop="@+id/ivProfissaoFoto"
        android:layout_toRightOf="@+id/ivProfissaoFoto"
        android:layout_toEndOf="@+id/ivProfissaoFoto"

         />


</RelativeLayout>
