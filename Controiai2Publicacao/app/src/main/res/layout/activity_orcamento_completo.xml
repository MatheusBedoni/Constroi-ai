<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/fundo">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/corbranca"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="Pronto, viu como é fácil?"
        android:textSize="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/corbranca"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="Agora vamos encontrar o melhor profissional para você!"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/corbranca"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="Você conhece alguém que esteja precisando do nosso app? indique o Constrói Aí? para essa pessoa :)"
        android:textSize="20dp" />


    <Button
        android:text="FECHAR"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:background="@color/colorAccent"
        android:layout_marginRight="10dp"
        android:onClick="proximo"
        android:textColor="@color/corbranca"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/button_negativo1"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/corbranca"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="Você também pode precisar comprar materiais da construção, que tal comprar aqui também"
        android:textSize="20dp" />

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slImages"
        android:onClick="telefone"
        android:clickable="true"
        android:visibility="visible"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

</LinearLayout>
