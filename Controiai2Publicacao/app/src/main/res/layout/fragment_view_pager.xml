<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll2"

        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relative2"
            android:background="#ffffff"
            android:layout_alignLeft="@+id/relative1"
            android:layout_alignStart="@+id/relative1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:src="@drawable/agreement"
                android:foregroundGravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/imageView1"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Os profissionais passam por uma validação,"
                android:id="@+id/textView1"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimarytext"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/imageView1"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="\n Nós verificamos:"
                android:id="@+id/textView9"
                android:gravity="center"
                android:textStyle="italic"
                android:textColor="@color/colorPrimarytext"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView1"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Referências profissionais"
                android:id="@+id/textView10"
                android:gravity="center"
                android:textStyle="italic"
                android:textColor="@color/colorPrimarytext"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/textView9"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cursos anteriores"
                android:id="@+id/textView11"
                android:gravity="center"
                android:textStyle="italic"
                android:textColor="@color/colorPrimarytext"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/textView10"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="E realizamos uma entrevista presencial"
                android:id="@+id/textView12"
                android:gravity="center"
                android:textStyle="italic"
                android:textColor="@color/colorPrimarytext"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/textView11"
                android:layout_centerHorizontal="true" />




        </RelativeLayout>
    </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll3"

        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relative3"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:src="@drawable/engineer__1_"
                android:id="@+id/imageView2"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="O cadastro é rápido e fácil"
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:textColor="@color/colorPrimarytext"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Se cadastre como profissional ou construtora e tenha um método mais eficiente para encontrar os serviços"
                android:id="@+id/textView8"
                android:textColor="@color/colorPrimarytext"
                android:gravity="center"
                android:textStyle="italic"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true" />



        </RelativeLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll1"

        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/scroll2"
        android:layout_toRightOf="@+id/scroll2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relative1"


            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:src="@drawable/logo_agencia"
                android:id="@+id/imageView5"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Olá bem-vindo(a), a nossa linda plataforma de serviços"
                android:id="@+id/textView5"
                android:textStyle="bold"
                android:textColor="@color/colorPrimarytext"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/imageView5"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nosso objetivo é conectar você aos melhores profissionais de Boa Vista"
                android:id="@+id/textV"
                android:textColor="@color/colorPrimarytext"
                android:gravity="center"
                android:textStyle="italic"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true" />




        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
