<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/coordinator"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="com.app.equipe.controiai2.ProfissionalActivity"
    >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_brand"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="visible">
        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_main"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">



        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:visibility="gone">




        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/texto_descricao2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Fale sobre suas experiências na sua área de atuação."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimarytext"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/texto_dica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texto_descricao2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Dica: onde trabalhou, a quanto tempo você trabalha etc"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/experiencias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/texto_dica"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="*Trabalho com isso desde..."
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/text_cidade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/cursos"
                        android:layout_alignStart="@+id/cursos"
                        android:layout_below="@+id/cursos"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Escreva as cidades ou bairros onde você trabalha"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimarytext"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/edt_cidades"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/texto_obs"
                        android:layout_alignStart="@+id/texto_obs"
                        android:layout_below="@+id/text_dias"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="16dp" />
                    <TextView
                        android:id="@+id/texto_cursos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"

                        android:text="Fale sobre seus cursos."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimarytext"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/texto_obs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/texto_cursos"
                        android:layout_alignStart="@+id/texto_cursos"
                        android:layout_below="@+id/texto_cursos"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Obs: essa parte não é obrigatoria, se você não tiver um curso específico, não se preocupe."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/cursos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/texto_obs"
                        android:layout_alignStart="@+id/texto_obs"
                        android:layout_below="@+id/texto_obs"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="Meus cursos são..."
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/text_dias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/cursos"
                        android:layout_alignStart="@+id/cursos"
                        android:layout_below="@+id/cursos"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Quais dias da semana você está disponível?"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimarytext"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/tempo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/texto_obs"
                        android:layout_alignStart="@+id/texto_obs"
                        android:layout_below="@+id/text_dias"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="*Segunda a Sexta"
                        android:textSize="16dp" />



                </LinearLayout>
            </ScrollView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Escreva uma descrição de sua empresa."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimarytext"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/texto_dica4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nome"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Dica: fale sobre seu histórico e suas experiências no mercado."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/historico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/texto_dica4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:hint="*Nossa empresa..."
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/button_negativo4"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:onClick="pular1"
                    android:text="cancelar" />

                <Button
                    android:id="@+id/button_descr4"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="bottom"
                    android:layout_weight="3"
                    android:onClick="salvarhis"
                    android:text="SALVAR INFORMACOES" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
